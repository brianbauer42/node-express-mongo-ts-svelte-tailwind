{
  "name": "svelte-app",
  "version": "1.0.0",
  "scripts": {
    "build": "npm run buildClient && npm run buildServer",
    "buildClient": "npm run validate && rollup -c ./config/rollup.config.js",
    "buildServer": "tsc -p ./config/tsconfig.server.json",
    "clean": "rimraf server-built && rimraf public/dist",
    "dev": "rollup -c ./config/rollup.config.js -w",
    "devserver": "concurrently \"tsc -p ./config/tsconfig.server.json -w\" \"nodemon server-built/server.js\"",
    "start": "sirv public",
    "validate": "svelte-check --ignore \"public,server,config\""
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.3.0",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@tailwindcss/ui": "^0.5.0",
    "@tsconfig/svelte": "^1.0.0",
    "@types/bcrypt-nodejs": "0.0.31",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@types/express-session": "^1.17.0",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.6.0",
    "@types/passport": "^1.0.4",
    "@types/passport-local": "^1.0.33",
    "concurrently": "^5.3.0",
    "postcss-cli": "^7.1.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.3.4",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-serve": "^1.0.3",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^7.0.0",
    "rollup-plugin-typescript2": "^0.27.2",
    "sirv-cli": "^1.0.0",
    "svelte": "^3.0.0",
    "svelte-check": "^1.0.23",
    "svelte-preprocess": "^4.0.0",
    "tailwindcss": "^1.7.3",
    "tslib": "^2.0.0",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "mongoose": "^5.10.0",
    "passport": "^0.4.1"
  }
}
